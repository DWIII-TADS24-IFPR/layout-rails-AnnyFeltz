<p class="notice"><%= notice %></p>

<% content_for :title, "Posts" %>

<h1 class="page-title">Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <div class="flex-center-horizontal" style="gap: 0.5vw; align-items: center;">
      <%= link_to post, class: "btn btn-neutral inline-flex items-center", title: "Visualizar este post" do %>
        <span class="material-symbols-outlined">visibility</span>
      <% end %>

      <%= button_to like_post_path(post), method: :post, class: "btn-like inline-flex items-center", form: { style: "display: inline-block; margin: 0;" } do %>
        <span class="material-symbols-outlined">
          <%= post.liked_by?(current_admin) ? 'favorite' : 'favorite_border' %>
        </span>
        <span id="like-count-<%= post.id %>" style="margin-left: 0.5vw;"><%= post.likes_count %></span>
      <% end %>
    </div>
    <br>
  <% end %>
</div>

<div class="opções">
  <%= link_to "Comments", comments_path, class: "btn btn-neutral mt-2 inline-block" %>
  <%= link_to "New post", new_post_path, class: "btn btn-primary mt-4 inline-block" %>
</div>
